<Page x:Class="eduVPNClient.AccessTypePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignWidth="298"
      d:DesignHeight="373"
      Title="{StaticResource AccessTypePageTitle}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button
            Grid.Row="0"
            Style="{StaticResource eduVPNChoiceButtonStyle}"
            IsEnabled="False"
            Content="{StaticResource SecureInternetTitle}"/>

        <TextBlock
            Grid.Row="0"
            Style="{StaticResource eduVPNChoiceLabelStyle}"
            Text="{StaticResource SecureInternetNote}"/>

        <Button
            Grid.Row="1"
            Style="{StaticResource eduVPNChoiceButtonStyle}"
            Command="NavigationCommands.GoToPage"
            CommandTarget="{Binding ElementName=NavigationFrame}"
            CommandParameter="InstanceSelectionPage.xaml"
            Content="{StaticResource InstituteAccessTitle}"/>

        <TextBlock
            Grid.Row="1"
            Style="{StaticResource eduVPNChoiceLabelStyle}"
            Text="{StaticResource InstituteAccessNote}"/>
    </Grid>
</Page>
