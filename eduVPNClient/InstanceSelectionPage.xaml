<Page x:Class="eduVPNClient.InstanceSelectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      d:DesignWidth="298"
      d:DesignHeight="373"
      Title="Instance Selection">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button
            Style="{DynamicResource eduVPNNavigationButtonStyle}"
            Command="NavigationCommands.GoToPage"
            CommandTarget="{Binding ElementName=NavigationFrame}"
            CommandParameter="AccessTypePage.xaml">&lt;</Button>

        <Label
            Grid.Column="1"
            Style="{DynamicResource eduVPNPageTitleStyle}">Choose your Provider</Label>

        <ListBox
            Grid.Row="1"
            x:Name="Providers"
            Grid.ColumnSpan="2"
            Margin="10"/>
    </Grid>
</Page>
