<windows:Window
    x:Class="eduVPN.Views.Windows.ConnectWizard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:res="clr-namespace:eduVPN.Client.Resources"
    xmlns:pages="clr-namespace:eduVPN.Views.Pages"
    xmlns:windows="clr-namespace:eduVPN.Views.Windows"
    xmlns:vmwindows="clr-namespace:eduVPN.ViewModels.Windows;assembly=eduVPN"
    xmlns:vmpages="clr-namespace:eduVPN.ViewModels.Pages;assembly=eduVPN"
    mc:Ignorable="d"
    Title="{x:Static res:Strings.MainWindowTitle}"
    Height="460"
    Width="300"
    Icon="{Binding Path=ActiveSession.State, Converter={StaticResource VPNSessionStatusTypeWindowIconConverter}, FallbackValue={StaticResource eduVPNVPNSessionStatusTypeIconInitializingImage}}"
    Style="{StaticResource eduVPNWindow}"
    Loaded="Window_Loaded"
    Closing="Window_Closing">

    <Window.DataContext>
        <vmwindows:ConnectWizard
            RequestInstanceAuthorization="ConnectWizard_RequestInstanceAuthorization"
            RequestTwoFactorEnrollment="ConnectWizard_RequestTwoFactorEnrollment"
            RequestOpenVPNPasswordAuthentication="ConnectWizard_RequestOpenVPNPasswordAuthentication"
            RequestOpenVPNUsernamePasswordAuthentication="ConnectWizard_RequestOpenVPNUsernamePasswordAuthentication"
            RequestTwoFactorAuthentication="ConnectWizard_RequestTwoFactorAuthentication"
            PromptSelfUpdate="ConnectWizard_PromptSelfUpdate"
            QuitApplication="ConnectWizard_QuitApplication"/>
    </Window.DataContext>

    <Window.Resources>
        <!-- Page view model to view mapping -->
        <DataTemplate DataType="{x:Type vmpages:InitializingPage}">
            <pages:InitializingPage/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vmpages:InstanceSourceSelectPage}">
            <pages:InstanceSourceSelectPage/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vmpages:AuthenticatingCountrySelectPage}">
            <pages:AuthenticatingInstanceSelectPage
                Title="{x:Static res:Strings.AuthenticatingCountrySelectPageTitle}"
                Description="{x:Static res:Strings.AuthenticatingCountrySelectPageDescription}"/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vmpages:AuthenticatingInstituteSelectPage}">
            <pages:AuthenticatingInstanceSelectPage
                Title="{x:Static res:Strings.AuthenticatingInstituteSelectPageTitle}"/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vmpages:CustomInstancePage}">
            <pages:CustomInstancePage/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vmpages:RecentConfigurationSelectPage}">
            <pages:RecentConfigurationSelectPage/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vmpages:ConnectingProfileSelectPage}">
            <pages:ConnectingProfileSelectPage/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vmpages:StatusPage}">
            <pages:StatusPage/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vmpages:SettingsPage}">
            <pages:SettingsPage/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vmpages:AboutPage}">
            <pages:AboutPage/>
        </DataTemplate>

        <ContextMenu x:Key="SystemTrayMenu">
            <MenuItem
                Header="{x:Static res:Strings.SystemTrayMenuOpen}"
                Click="Open_Click"
                FontWeight="Bold"/>
            <MenuItem
                Header="{x:Static res:Strings.SystemTrayMenuStatus}"
                Command="{Binding Path=SessionInfo}"
                Click="Open_Click"/>
            <Separator/>
            <MenuItem
                Header="{x:Static res:Strings.SystemTrayMenuSettings}"
                Command="{Binding Path=NavigateTo}"
                CommandParameter="{Binding Path=SettingsPage}"
                Click="Open_Click"/>
            <MenuItem
                Header="{x:Static res:Strings.SystemTrayMenuAbout}"
                Command="{Binding Path=NavigateTo}"
                CommandParameter="{Binding Path=AboutPage}"
                Click="Open_Click"/>
            <Separator/>
            <MenuItem
                Header="{x:Static res:Strings.SystemTrayMenuExit}"
                Click="Exit_Click"/>
        </ContextMenu>
    </Window.Resources>

    <!-- The window icon reflects all the VPN states and does not require an additional overlay from v1.0.3 on.
    <Window.TaskbarItemInfo>
        <TaskbarItemInfo Overlay="{Binding Path=ActiveSession.State, Converter={StaticResource VPNSessionStatusTypeIconConverter}}"/>
    </Window.TaskbarItemInfo>
    -->

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border
            Grid.ColumnSpan="3"
            Background="{StaticResource eduVPNHeaderBrush}"/>

        <Canvas
            Margin="6">
            <Canvas.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="0.040" ScaleY="0.040"/>
                </TransformGroup>
            </Canvas.RenderTransform>
