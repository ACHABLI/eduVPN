            <Path
                Fill="{StaticResource eduVPNLogoWhiteBrush}"
                Data="M329.573,262.282l-7.34,6.51c-13.2,8.771-28.68,13.49-44.53,13.58c-3.34,0.011-6.68-0.189-9.99-0.62c-17.84-3.479-34.76-10.649-49.67-21.039l-37.82-26.5l26.63-5.61c11.14-2.431,22.5-3.689,33.91-3.761c30.05,0,56.38,9.99,80.5,30.511L329.573,262.282z"/>
        </Canvas>

        <TextBlock
            Grid.Column="1"
            Margin="0,5"
            Style="{StaticResource eduVPNHeaderTextBlockStyle}"
            Text="{x:Static res:Strings.MainWindowTitle}"/>

        <Button
            Grid.Column="2"
            Margin="2"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            IsCancel="True"
            Style="{StaticResource eduVPNHeaderButtonStyle}"
            AutomationProperties.Name="{x:Static res:Strings.ButtonCloseTitle}"
            Click="Hide_Click">×</Button>

        <Control
            Grid.Row="1"
            Grid.ColumnSpan="3"
            Style="{StaticResource eduVPNErrorStatusBar}">
        </Control>

        <DockPanel
            Grid.Row="2"
            Grid.ColumnSpan="3">
            <Frame
                NavigationUIVisibility="Hidden"
                IsTabStop="False"
                Content="{Binding Path=CurrentPage}">
            </Frame>
        </DockPanel>
    </Grid>
</windows:Window>
