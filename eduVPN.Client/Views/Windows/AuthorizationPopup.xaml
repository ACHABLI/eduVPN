<windows:Window
    x:Class="eduVPN.Views.Windows.AuthorizationPopup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:res="clr-namespace:eduVPN.Client.Resources"
    xmlns:windows="clr-namespace:eduVPN.Views.Windows"
    mc:Ignorable="d"
    Width="350"
    Height="216"
    Title="{x:Static res:Strings.AuthorizationPopupTitle}"
    Description="{Binding Path=Instance, StringFormat={x:Static res:Strings.AuthorizationPopupMessage}}"
    AutomationProperties.HelpText="{Binding Path=Instance, StringFormat={x:Static res:Strings.AuthorizationPopupMessage}}"
    WindowStartupLocation="CenterOwner"
    Style="{StaticResource eduVPNPopupWindow}">

    <Grid
        VerticalAlignment="Top"
        Style="{StaticResource eduVPNPageContentGridStyle}">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
    </Grid>
</windows:Window>
