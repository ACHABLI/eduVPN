<view:Window
    x:Class="eduVPN.Views.UsernamePasswordPopup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:res="clr-namespace:eduVPN.Client.Resources"
    xmlns:view="clr-namespace:eduVPN.Views"
    mc:Ignorable="d"
    Width="350"
    Height="216"
    Title="{x:Static res:Strings.UsernamePasswordPopupTitle}"
    Description="{Binding Path=Realm, StringFormat={x:Static res:Strings.UsernamePasswordPopupMessage}}"
    WindowStartupLocation="CenterOwner"
    Style="{StaticResource eduVPNPopupWindow}">

    <Grid
        VerticalAlignment="Top"
        Style="{StaticResource eduVPNPageContentGridStyle}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock
            Margin="5,5,2,5"
            VerticalAlignment="Center"
            Style="{StaticResource eduVPNTextBlockStyle}"
            Text="{x:Static res:Strings.UsernamePasswordPopupUsernameTitle}"/>

        <TextBox
            x:Name="Username"
            Grid.Column="1"
            Margin="2,5,5,5"
            Text="{Binding Path=Username, UpdateSourceTrigger=PropertyChanged}"
            Style="{StaticResource eduVPNTextBoxStyle}"/>

        <TextBlock
            Grid.Row="1"
            Margin="5,5,2,5"
            VerticalAlignment="Center"
            Style="{StaticResource eduVPNTextBlockStyle}"
            Text="{x:Static res:Strings.UsernamePasswordPopupPasswordTitle}"/>

        <PasswordBox
            x:Name="Password"
            Grid.Row="1"
            Grid.Column="1"
            Margin="2,5,5,5"
            Style="{StaticResource eduVPNPasswordBoxStyle}"/>

        <Button
            x:Name="OK"
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Margin="5"
            IsDefault="True"
            Style="{StaticResource eduVPNButtonStyle}"
            Content="{x:Static res:Strings.ButtonOKTitle}"
            Command="{Binding Path=ApplyResponse}"
            Click="OK_Click"/>
    </Grid>
</view:Window>
