<view:ProfileSelectBasePage
    x:Class="eduVPN.Views.InstanceAndProfileSelectPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:view="clr-namespace:eduVPN.Views"
    xmlns:res="clr-namespace:eduVPN.Client.Resources"
    mc:Ignorable="d"
    d:DesignWidth="298"
    d:DesignHeight="373"
    Title="{x:Static res:Strings.ProfileSelectPageTitle}"
    Style="{StaticResource eduVPNConnectWizardPageWithTitleAndBack}">

    <Grid Style="{StaticResource eduVPNPageContentGridStyle}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StatusBar
            Margin="10"
            Style="{StaticResource eduVPNInlineInfoBarStyle}"
            Visibility="{Binding Path=UserInfo.IsEnabled, Converter={StaticResource UserDisabledVisibilityConverter}, FallbackValue=Visibility.Collapsed}">
            <StatusBarItem>
                <ContentControl Content="{StaticResource eduVPNUserDisabledIcon}"/>
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock
                    TextWrapping="Wrap"
                    Text="{x:Static res:Strings.UserDisabledMessage}"/>
            </StatusBarItem>
        </StatusBar>

        <ComboBox
            Grid.Row="1"
            Margin="10"
            Style="{StaticResource eduVPNComboBoxStyle}"
            ItemTemplate="{StaticResource eduVPNInstanceSelectionItemTemplate}"
            ItemContainerStyle="{StaticResource eduVPNComboBoxItemStyle}"
            ItemsSource="{Binding Path=Parent.InstanceGroup}"
            SelectedItem="{Binding Path=SelectedInstance}"/>

        <ListBox
            Grid.Row="2"
            Margin="10,5"
            Style="{StaticResource eduVPNListStyle}"
            ItemTemplate="{StaticResource eduVPNProfileSelectionItemTemplate}"
            ItemContainerStyle="{StaticResource eduVPNListBoxItemStyle}"
            ItemsSource="{Binding Path=ProfileList}"
            SelectedItem="{Binding Path=SelectedProfile}"
            SelectionChanged="ProfileList_SelectionChanged"/>
    </Grid>
</view:ProfileSelectBasePage>
