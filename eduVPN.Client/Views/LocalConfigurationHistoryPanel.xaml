<UserControl
    x:Class="eduVPN.Views.LocalConfigurationHistoryPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="300">

    <UserControl.Resources>
        <!-- eduVPN collection view sources -->
        <CollectionViewSource x:Key="ConfigurationListView" Source="{Binding Path=Parent.ConfigurationHistories[2]}">
            <CollectionViewSource.SortDescriptions>
                <scm:SortDescription PropertyName="Popularity" Direction="Descending"/>
            </CollectionViewSource.SortDescriptions>
        </CollectionViewSource>
    </UserControl.Resources>

    <ListBox
        Style="{StaticResource eduVPNListStyle}"
        ItemTemplate="{StaticResource eduVPNConfigurationSelectionItemTemplate}"
        ItemContainerStyle="{StaticResource eduVPNListBoxItemStyle}"
        ItemsSource="{Binding Source={StaticResource ConfigurationListView}}"
        SelectedItem="{Binding Path=SelectedConfiguration}"
        SelectionChanged="ConfigurationList_SelectionChanged"/>
</UserControl>
