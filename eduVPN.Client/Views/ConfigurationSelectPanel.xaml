<UserControl
    x:Class="eduVPN.Views.ConfigurationSelectPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
    xmlns:res="clr-namespace:eduVPN.Client.Resources"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="300">

    <UserControl.Resources>
        <!-- eduVPN collection view sources -->
        <CollectionViewSource x:Key="ConfigurationListView" Source="{Binding Path=Parent.ConfigurationHistories[2]}">
            <CollectionViewSource.SortDescriptions>
                <scm:SortDescription PropertyName="Popularity" Direction="Descending"/>
            </CollectionViewSource.SortDescriptions>
        </CollectionViewSource>

        <Style x:Key="ConfigurationListBoxStyle" TargetType="{x:Type ListBoxItem}" BasedOn="{StaticResource eduVPNListBoxItemStyle}">
            <EventSetter Event="PreviewMouseLeftButtonUp" Handler="ConfigurationList_SelectItem"/>
            <EventSetter Event="PreviewKeyDown" Handler="ConfigurationList_PreviewKeyDown"/>
        </Style>
    </UserControl.Resources>

    <ListBox
        x:Name="ConfigurationList"
        Style="{StaticResource eduVPNListStyle}"
        ItemTemplate="{StaticResource eduVPNConfigurationSelectionItemTemplate}"
        ItemContainerStyle="{StaticResource ConfigurationListBoxStyle}"
        ItemsSource="{Binding Source={StaticResource ConfigurationListView}}"
        SelectedItem="{Binding Path=SelectedConfiguration}">

        <ListBox.ContextMenu>
            <ContextMenu DataContext="{Binding Path=PlacementTarget, RelativeSource={RelativeSource Self}}">
                <MenuItem
                    Header="{x:Static res:Strings.ConfigurationSelectForget}"
                    Command="{Binding Path=DataContext.ForgetSelectedConfiguration}"/>
            </ContextMenu>
        </ListBox.ContextMenu>
    </ListBox>
</UserControl>
