<Page
    x:Class="eduVPN.Views.InstanceSelectPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:res="clr-namespace:eduVPN.Client.Resources"
    mc:Ignorable="d"
    d:DesignWidth="298"
    d:DesignHeight="373"
    Title="{x:Static res:Strings.InstanceSelectPageTitle}"
    Template="{StaticResource eduVPNConnectWizardPageWithBack}">

    <ListBox
        Grid.Row="1"
        Style="{StaticResource eduVPNListStyle}"
        ItemTemplate="{StaticResource eduVPNInstanceSelectionItemTemplate}"
        ItemContainerStyle="{StaticResource eduVPNInstanceSelectionItemContainerStyle}"
        ItemsSource="{Binding InstanceList}"
        SelectedItem="{Binding SelectedInstance}"
        SelectionChanged="InstanceList_SelectionChanged"/>
</Page>
