<view:ConnectingInstanceAndProfileSelectBasePanel
    x:Class="eduVPN.Views.ConnectingProfileSelectPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:view="clr-namespace:eduVPN.Views"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="300">

    <ListBox
        Style="{StaticResource eduVPNListStyle}"
        ItemTemplate="{StaticResource eduVPNProfileSelectionItemTemplate}"
        ItemContainerStyle="{StaticResource eduVPNListBoxItemStyle}"
        ItemsSource="{Binding Path=ProfileList}"
        SelectedItem="{Binding Path=SelectedProfile}"
        SelectionChanged="ProfileList_SelectionChanged"/>
</view:ConnectingInstanceAndProfileSelectBasePanel>
