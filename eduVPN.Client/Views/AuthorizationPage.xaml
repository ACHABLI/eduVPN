<view:ConnectWizardPage
    x:Class="eduVPN.Views.AuthorizationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:view="clr-namespace:eduVPN.Views"
    xmlns:res="clr-namespace:eduVPN.Client.Resources"
    mc:Ignorable="d"
    d:DesignWidth="298"
    d:DesignHeight="373"
    Title="{x:Static res:Strings.AuthorizationPageTitle}"
    Description="{x:Static res:Strings.AuthorizationPageMessage}"
    Style="{StaticResource eduVPNConnectWizardPageWithTitleAndBack}">

    <Grid
        VerticalAlignment="Top"
        Style="{StaticResource eduVPNPageContentGridStyle}">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button
            Margin="10"
            Style="{StaticResource eduVPNButtonStyle}"
            Content="{x:Static res:Strings.AuthorizationPageRetry}"
            Command="{Binding Path=Retry}"/>
    </Grid>
</view:ConnectWizardPage>
