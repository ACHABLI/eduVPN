<Page
    x:Class="eduVPN.Views.AuthorizationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:res="clr-namespace:eduVPN.Client.Resources"
    mc:Ignorable="d" 
    d:DesignWidth="298"
    d:DesignHeight="373"
    Title="{x:Static res:Strings.AuthorizationPageTitle}"
    Template="{StaticResource eduVPNConnectWizardPageWithBack}">

    <StackPanel
        Style="{StaticResource eduVPNCombinedControlStackPanelStyle}">
        <TextBlock
            Margin="0,0,0,10"
            Style="{StaticResource eduVPNTextBlockStyle}"
            Text="{x:Static res:Strings.AuthorizationPageMessage}"/>

        <Button
            Margin="0,10,0,2"
            Content="{x:Static res:Strings.AuthorizationPageRetry}"
            Command="{Binding Path=Retry}"/>

        <TextBlock
            Margin="0,2,0,0"
            Style="{StaticResource eduVPNNoteStyle}"
            Text="{x:Static res:Strings.AuthorizationPageRetryNote}"/>
    </StackPanel>
</Page>
