<UserControl
    x:Class="eduVPN.Views.Panels.TOTPAuthenticationPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    mc:Ignorable="d"
    d:DesignWidth="320"
    d:DesignHeight="100"
    FocusManager.FocusedElement="{Binding ElementName=Response}">

    <Grid Margin="-5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBox
            x:Name="Response"
            Margin="5"
            HorizontalContentAlignment="Center"
            Style="{StaticResource eduVPNTextBoxStyle}"
            Text="{Binding Path=Response, UpdateSourceTrigger=PropertyChanged}"/>
    </Grid>
</UserControl>
