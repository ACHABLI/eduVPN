<pages:ConnectWizardPage
    x:Class="eduVPN.Views.Pages.CustomInstancePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:pages="clr-namespace:eduVPN.Views.Pages"
    xmlns:prop="clr-namespace:eduVPN.Client.Properties"
    xmlns:res="clr-namespace:eduVPN.Client.Resources"
    mc:Ignorable="d"
    d:DesignWidth="298"
    d:DesignHeight="373"
    Title="{Binding Path=Title}"
    Description="{Binding Path=Description}"
    AutomationProperties.HelpText="{Binding Path=Description}"
    Style="{StaticResource eduVPNConnectWizardPage}">

    <Grid
        VerticalAlignment="Top"
        Style="{StaticResource eduVPNPageContentGridStyle}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock
            VerticalAlignment="Center"
            Margin="5,5,0,5"
            Style="{StaticResource eduVPNTextBlockStyle}"
            Text="https://"/>

        <ComboBox
            x:Name="InstanceHostname"
            Grid.Column="1"
            Margin="0,5,5,5"
            VerticalAlignment="Center"
            Style="{StaticResource eduVPNComboBoxStyle}"
            Text="{Binding Path=Hostname, UpdateSourceTrigger=PropertyChanged}"
            TextSearch.TextPath=""
            ItemsSource="{Binding Source={x:Static prop:Settings.Default}, Path=CustomInstanceHistory}"
            IsSynchronizedWithCurrentItem="True"
            IsEditable="True"
            AutomationProperties.Name="{Binding Source={x:Static res:Strings.CustomInstancePageHostnameLabel}, Converter={StaticResource RemoveAccessKeyConverter}}"
            AutomationProperties.IsRequiredForForm="True"/>

        <Button
            Grid.ColumnSpan="2"
            Grid.Row="1"
            Margin="5"
            IsDefault="True"
            Style="{StaticResource eduVPNButtonStyle}"
            AutomationProperties.Name="{x:Static res:Strings.ButtonNextTitleAlt}"
            Command="{Binding Path=SelectCustomInstance}"
            Click="Button_Click">
            <AccessText
                Text="{x:Static res:Strings.ButtonNextTitle}"/>
        </Button>
    </Grid>
</pages:ConnectWizardPage>
