<pages:ConnectWizardPage
    x:Class="eduVPN.Views.Pages.InitializingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:pages="clr-namespace:eduVPN.Views.Pages"
    xmlns:res="clr-namespace:eduVPN.Client.Resources"
    mc:Ignorable="d"
    d:DesignWidth="298"
    d:DesignHeight="373"
    Title="{x:Static res:Strings.InitializingPageTitle}"
    Style="{StaticResource eduVPNConnectWizardPage}">

    <Grid
        VerticalAlignment="Top"
        Style="{StaticResource eduVPNPageContentGridStyle}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ProgressBar
            Margin="5"
            Style="{StaticResource eduVPNProgressBarStyle}"
            Minimum="{Binding Path=Progress.Minimum}"
            Maximum="{Binding Path=Progress.Maximum}"
            Value="{Binding Path=Progress.Value}"/>
    </Grid>
</pages:ConnectWizardPage>
